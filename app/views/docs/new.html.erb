<h1>Doc#new(ドキュメント作成画面)</h1>

<%= form_for(@doc) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.text_area :body, {id: 'some-textarea', class: 'wysihtml5', placeholder: "Enter text ..."} %>
    <%= f.submit "Save Document" %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>


<textarea id="search-textarea" class='field' placeholder="引用文章検索 ..."></textarea>
<p>
<input type="button" value="内部文書検索" onclick="history.back()">
<input type="button" value="インターネット検索" onclick="history.back()">
</p>

